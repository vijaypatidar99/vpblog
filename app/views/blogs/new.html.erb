<div class="container my-3">
  <%= form_with model: @blog, local: true do |f| %>
    <%= f.label :title,"Enter your title" %>
    <%= f.text_field :title, class: 'form-control', required: true %><br>
    <%= f.label :sub_title, "Enter sub title" %>
    <%= f.text_field :sub_title, class: 'form-control', required: true %><br>
    <%= f.label :content, "Enter content" %>
    <%= f.text_area :content, class: 'form-control',  rows: 3, required: true %><br>
 
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Save blog", class: "btn btn-primary" %>
    <%= link_to "Back", :back ,class:"btn btn-primary"%>
  <% end %>
</div>
